<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/tickerImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:scaleX="1.3"
        android:scaleY="1.3"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:srcCompat="@mipmap/ic_lyra_dashboard_icon" />

    <TextView
        android:id="@+id/wallet_tr_entry_card_ticker"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="2dp"
        android:gravity="center_horizontal|start"
        android:text="TLYR"
        android:textSize="16sp"
        android:textColor="@color/more_tint"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintStart_toEndOf="@+id/tickerImageView" />

    <TextView
        android:id="@+id/wallet_tr_entry_card_value_usd"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:gravity="center_horizontal|start"
        android:text="$0.1"
        android:textSize="13sp"
        android:textColor="@color/more_tint"
        app:layout_constraintStart_toEndOf="@+id/tickerImageView"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <TextView
        android:id="@+id/wallet_tr_entry_card_total_value"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="2dp"
        android:gravity="center_horizontal|end"
        android:text="1,000.1234"
        android:textSize="16sp"
        android:textColor="@color/more_tint"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/wallet_tr_entry_card_total_value_usd"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:gravity="center_horizontal|end"
        android:text="$100.1234"
        android:textSize="13sp"
        android:textColor="@color/more_tint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <TextView
        android:id="@+id/wallet_tr_entry_card_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal|end"
        android:text="0"
        android:textSize="11sp"
        android:textColor="@color/more_tint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintVertical_bias="1.0" />

    <TableRow
        android:id="@+id/hr"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#AAA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>