<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="wallet_tag">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollViewAccount"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:contentDescription="TODO"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/fab_dashboard_header_color" />

                <TextView
                    android:id="@+id/accountValueLyr_textView"
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="123,456,789LYR"
                    android:textColor="@color/page_foreground"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

                <TextView
                    android:id="@+id/accountValueUsd_textView"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="10,000USD"
                    android:textColor="@color/page_foreground"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/imageView2"
                    app:layout_constraintTop_toBottomOf="@+id/accountValueLyr_textView"
                    tools:ignore="TextContrastCheck" />

                <TextView
                    android:id="@+id/totalBalanceUsd_textView"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Total Balance : $1,000.000"
                    android:textColor="@color/page_foreground"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/accountValueUsd_textView" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/imageView3"
                    android:layout_width="36dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/ic_outline_article_36"
                    android:text=""
                    app:backgroundTint="@color/page_foreground"
                    app:backgroundTintMode="multiply"
                    app:iconPadding="0dp"
                    app:iconTint="@color/page_foreground"
                    app:layout_constraintEnd_toStartOf="@+id/guideline2"
                    app:layout_constraintStart_toStartOf="@+id/guideline2"
                    app:layout_constraintTop_toBottomOf="@+id/totalBalanceUsd_textView"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/materialButton2"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/fab_round_button"
                    android:insetLeft="-12dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:onClick="send"
                    android:text=""
                    android:textColor="@color/menu_button_text"
                    app:backgroundTint="@null"
                    app:backgroundTintMode="add"
                    app:icon="@drawable/ic_outline_arrow_downward_48"
                    app:iconPadding="0dp"
                    app:iconTint="@color/page_foreground"
                    app:layout_constraintStart_toEndOf="@+id/imageView3"
                    app:layout_constraintTop_toTopOf="@+id/imageView3"
                    tools:ignore="TextContrastCheck,SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="fitXY"
                    android:scaleX="1.4"
                    android:scaleY="1.4"
                    app:layout_constraintEnd_toStartOf="@+id/guideline2"
                    app:layout_constraintStart_toStartOf="@+id/guideline2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@mipmap/ic_lyra_dashboard_icon" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="History"
                    android:textColor="@color/page_foreground"
                    app:layout_constraintEnd_toStartOf="@+id/guideline2"
                    app:layout_constraintStart_toStartOf="@+id/guideline2"
                    app:layout_constraintTop_toBottomOf="@+id/imageView3" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/materialButton"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/fab_round_button"
                    android:contentDescription="@string/str_launcher_receive_button"
                    android:insetLeft="-12dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:onClick="receive"
                    android:text=""
                    app:backgroundTint="@null"
                    app:backgroundTintMode="add"
                    app:icon="@drawable/ic_outline_arrow_upward_48"
                    app:iconPadding="0dp"
                    app:iconTint="@color/page_foreground"
                    app:layout_constraintEnd_toStartOf="@+id/imageView3"
                    app:layout_constraintTop_toTopOf="@+id/imageView3"
                    tools:ignore="TextContrastCheck" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_end="0dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/account_history_recicler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>

            <ProgressBar
                android:id="@+id/fragment_account_progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="@+id/nestedScrollView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline_bottom" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>