<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.lyrawallet.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.LyraWalletAndroid.AppBarOverlay">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?attr/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:popupTheme="@style/Theme.LyraWalletAndroid.PopupOverlay"
                tools:visibility="invisible" />

            <Spinner
                android:id="@+id/accountSpinner"
                android:layout_width="170dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:minHeight="48dp"
                android:spinnerMode="dropdown"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/statusBarText"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/nav_header_title"
                android:textColor="#212121"
                app:layout_constraintEnd_toStartOf="@+id/accountSpinner"
                app:layout_constraintStart_toEndOf="@+id/toDashboard"
                app:layout_constraintTop_toBottomOf="@+id/toolbar" />

            <Button
                android:id="@+id/toDashboard"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:text="@string/str_launcher_dashboard_short_button"
                android:textColor="#212121"
                android:onClick="dashboard"
                app:layout_constraintEnd_toStartOf="@+id/statusBarText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/toOpenWallet"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:text="@string/str_launcher_open_wallet_short_button"
                android:textColor="#212121"
                android:onClick="openWallet"
                app:layout_constraintEnd_toStartOf="@+id/statusBarText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/toCloseWallet"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="start"
                android:text="@string/str_launcher_close_wallet_short_button"
                android:textColor="#212121"
                android:onClick="closeWallet"
                app:layout_constraintEnd_toStartOf="@+id/statusBarText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.appbar.AppBarLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>